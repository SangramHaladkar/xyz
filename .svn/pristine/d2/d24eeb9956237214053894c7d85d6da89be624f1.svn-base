<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/titleTextView"
        android:gravity="center"
        android:text="Sample"
        android:inputType="textCapWords"
        android:textColor="@color/colorM3signin"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXTO"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="20dp"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:inputType="textCapWords"
        android:id="@+id/btn_cancel"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_rounded"
        android:textColor="#80A445"
        android:layout_alignTop="@+id/btn_logout"
        android:layout_toLeftOf="@+id/text_dialog"
        android:layout_toStartOf="@+id/text_dialog" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Logout"
        android:textSize="14sp"
        android:inputType="textCapWords"
        android:id="@+id/btn_logout"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_rounded"
        android:textColor="#80A445"
        android:layout_below="@+id/text_dialog"
        android:layout_toRightOf="@+id/text_dialog"
        android:layout_toEndOf="@+id/text_dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorM3signin"
        android:id="@+id/closeButton"
        android:text="@string/alert_close_button"
        android:layout_marginTop="7dp"
        android:paddingRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"/>

</RelativeLayout>

