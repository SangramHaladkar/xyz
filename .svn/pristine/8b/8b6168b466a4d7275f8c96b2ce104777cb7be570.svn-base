<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO : Linear Layout for First Name & Last name -->
        <LinearLayout
            android:id="@+id/linearLayoutFirstLastName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutChildFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <com.mobifilia.custom.IconTextView
                    android:id="@+id/firstNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/hint_first_name"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <com.mobifilia.custom.IconEditText
                    android:id="@+id/actualFirstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:inputType="textCapWords"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:imeOptions="actionNext"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutChildLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <com.mobifilia.custom.IconTextView
                    android:id="@+id/lastNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/hint_last_name"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <com.mobifilia.custom.IconEditText
                    android:id="@+id/actualLastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:inputType="textCapWords"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- TODO : Linear Layout for Email Address -->

        <LinearLayout
            android:id="@+id/linearLayoutChildEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/textview_border"
            android:orientation="vertical">

            <com.mobifilia.custom.IconTextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/hint_email"
                android:textColor="#666666"
                android:textSize="15sp" />

            <com.mobifilia.custom.IconEditText
                android:id="@+id/actualEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- TODO : Linear Layout for Opportunity Notification Preferences -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeLayoutOpportunityPrefernces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorM3signin">

            <RelativeLayout
                android:id="@+id/relativeLayoutChildRateIncrease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <com.mobifilia.custom.IconTextView
                    android:id="@+id/opportunityNotificationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/opportunity_notification_prefernces"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/opprNotificationPrefRelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/opportunityNotificationTextView">

                    <com.mobifilia.custom.IconTextView
                        android:id="@+id/opportunityNotificationPreferncesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/opportunityNotificationTextView"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="App Notifications"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <com.mobifilia.custom.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:text="{fa-caret-down}"
                        android:textColor="@color/color_black"
                        android:textSize="17dp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- TODO : Linear Layout for Contact Preferences -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeLayoutContactPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorM3signin">

            <RelativeLayout
                android:id="@+id/relativeLayoutChildContactPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <com.mobifilia.custom.IconTextView
                    android:id="@+id/contactPreferencesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/contact_preferneces"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/cntPrefRelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactPreferencesTextView">

                    <com.mobifilia.custom.IconTextView
                        android:id="@+id/actualContactPreferencesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Email"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <com.mobifilia.custom.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:text="{fa-caret-down}"
                        android:textColor="@color/color_black"
                        android:textSize="17dp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <!-- TODO : Linear Layout for Phone Number -->
        <LinearLayout
            android:id="@+id/linearLayoutChildPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/textview_border"
            android:orientation="vertical">

            <com.mobifilia.custom.IconTextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/hint_phone_number"
                android:textColor="#666666"
                android:textSize="15sp" />

            <com.mobifilia.custom.IconEditText
                android:id="@+id/actualPhoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            >
            <TextView
                android:id="@+id/socialUserErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:visibility="invisible"
                />

        </LinearLayout>
        <!-- TODO : Linear Layout for Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <com.mobifilia.custom.IconButton
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_rounded"
                android:text="@string/edit_button"
                android:textColor="#80A445"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- TODO : Linear Layout for Save and Cancel Button -->
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:text="@string/save_button"
                android:textAllCaps="false"
                android:textColor="#80A445"
                android:textSize="16sp" />

            <com.mobifilia.custom.IconButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:text="@string/cancel_button"
                android:textColor="#80A445"
                android:textSize="16sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>