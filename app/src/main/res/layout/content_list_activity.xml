<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xhdpi"
    tools:context="com.app.monitormymortgage.Activity.NotificationListActivity">

    <com.app.custom.IconTextView
        android:id="@+id/noNotificationsFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="No notifications to display."
        android:textColor="@color/color_broker_responce_pending"
        android:textSize="15sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/notificationListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/noNotificationsFound"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

</RelativeLayout>
