<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <!--Linear Layout 1  Current Rate    -->
   <RelativeLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/relativeLayoutCurrentRate"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_marginTop="@dimen/fab_margin"
       android:layout_marginBottom="@dimen/fab_margin"
       android:background="@color/colorM3signin"
       >
       <LinearLayout
           android:id="@+id/linearLayoutChildCurrentDate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/textview_border">
           <TextView
               android:id="@+id/currentRateTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:text="@string/current_rate"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:textColor="#666666"
               android:textSize="15sp"
               />
           <TextView
               android:id="@+id/actualCurrentRateTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:text="1.25%"
               android:textColor="#000000"
               android:layout_marginBottom="10dp"
               android:textSize="15sp"
               android:layout_marginLeft="10dp"
               />

       </LinearLayout>


   </RelativeLayout>


    <!--Linear Layout 2  Last Update    -->
    <RelativeLayout
        android:id="@+id/relativeLayoutLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutCurrentRate"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@color/colorM3signin"
        >
        <LinearLayout
            android:id="@+id/linearLayoutChildLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textview_border">
            <TextView
                android:id="@+id/lastUpdateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/last_update"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#666666"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/actualLastUpdateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Dec 1, 2015"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </RelativeLayout>


    <!--Linear Layout 3  Next Update    -->
    <RelativeLayout
        android:id="@+id/relativeLayoutNextUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutLastUpdate"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/colorM3signin"
        >
        <LinearLayout
            android:id="@+id/linearLayoutChildNextUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textview_border">
            <TextView
                android:id="@+id/nextUpdateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/next_update"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#666666"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/actualNextUpdateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Jan 20, 2016"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout></ScrollView>