<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <!--Linear Layout 1  Current Rate    -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayoutCurrentRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@color/colorM3signin"
        >
        <LinearLayout
            android:id="@+id/linearLayoutChildCurrentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textview_border">
            <TextView
                android:id="@+id/mortgagePropertyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Oakville House Mortgage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="#666666"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/addedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Added on Oct 1,2015"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/actualCurrentRateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="5 Opportunities"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </RelativeLayout></LinearLayout>